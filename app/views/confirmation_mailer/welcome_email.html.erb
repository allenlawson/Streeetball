<%
@confirm_url = "http://localhost:5000" + url_for(:controller => "users", :action => "verify", :id => (Base64.encode64 @user.id.to_s))
%>

<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
  </head>
  <body>
    <h1>Welcome to Streeetball, <%= @user.username %></h1>
    <p>
      You have successfully signed up to Streeetball, <a href="<%= @confirm_url %>">click here</a> to verify your email.
    </p>
    <p>Thanks for joining and have a great day!</p>
  </body>
</html>