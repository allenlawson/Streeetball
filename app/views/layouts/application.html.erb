<!DOCTYPE html>
<html>
<head>
  <title>Streeetball</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :class => "flash_#{name}" %>
<% end %>

<div class="user">
  <% if logged_in %>
    Howdy, <%= link_to current_user.username, user_path(current_user.username) %>. <%= link_to "Sign out", signout_path %>
  <% else %>
    <%= link_to "Sign in", signin_path %> | <%= link_to "Register", register_path %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
